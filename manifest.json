{
  "manifest_version": 3,
  "name": "LinkedIn Profile Finder",
  "version": "1.0",
  "description": "Finds professional details from a LinkedIn profile using Hunter.io.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.hunter.io/*",
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
